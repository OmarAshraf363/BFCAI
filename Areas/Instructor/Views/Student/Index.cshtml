
@model  IEnumerable<ApplicationUser>
<div class="container p-3">
    <h2>Manage Students for Your Courses</h2>

    <!-- قائمة اختيار الكورسات الخاصة بالمحاضر -->
    <form method="get" asp-action="Index">
        <div class="form-group">
            <label for="Course">Select Course</label>
            <select id="Course" name="courseId" class="form-control" onchange="this.form.submit()">
                <option value="">-- Select Course --</option>
                @foreach (var course in ViewBag.listOfCourses)
                {
                    if (ViewBag.courseId==null)
                    {
                        
                    <option value="@course.Value" >@course.Text</option>
                    }else{
                        <option value="@course.Value" selected>@course.Text</option>

                    }
                }
            </select>
        </div>
    </form>

    <!-- عرض الطلاب المسجلين في الكورس المحدد -->
    <table class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Email</th>
                <th>Gpa</th>

                
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FullName</td>
                    <td>@student.Email</td>
                    <td>@student.Gpa</td>
                    
                </tr>
            }
        </tbody>
    </table>


 
</div>
